<!-- Define a RippleDrawable with your custom shape -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight"> <!-- Customize ripple color -->

    <!-- Define your custom shape as the background -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#FFCC80" /> <!-- Set your desired background color -->
            <corners android:radius="90dp" /> <!-- Set the radius of the rounded corners -->
        </shape>
    </item>

    <!-- This item specifies the ripple effect behavior -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set transparent color -->
            <corners android:radius="90dp" /> <!-- Match the radius of the custom shape -->
        </shape>
    </item>
</ripple>